<Window x:Class="BingoManager.Views.PlayingCardsRemoverView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vw="clr-namespace:BingoManager.Views"
        Title="ricskeyz©software | Playing cards remover view" Height="286" Width="393" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="What card's serial number(s) you would like to be removed?"/>
        <Label Grid.Row="1" Content="Enter the numbers (from and to) below."/>
        <vw:From_To_View x:Name="Inputs" Grid.Row="2"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="8">
            <Button x:Name="OkButton" Content="OK" Width="50"/>
            <Button x:Name="CancelButton" Content="_Cancel" Width="50" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
